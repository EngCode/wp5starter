{
  "name": "tornado-ui-wp",
  "version": "2.0.5",
  "description": "Tornado is an Open Source Framework for Forntend and UI/UX Designers made with love from a designer to designers the Main Goal of this framework is to make web design more simple and providing the best performance and dynamic easy to control elements Builded With Sass for Easy Customizing and Overriding Every Thing.",
  "main": [
    "/dist/js/tornado.min.js",
    "/dist/css/tornado.css",
    "/dist/css/tornado-rtl.css"
  ],
  "directories": {
    "doc": "docs"
  },
  "keywords": [
    "tornado",
    "ui",
    "framework",
    "css",
    "js",
    "esNext",
    "es5",
    "es6",
    "react",
    "vue",
    "wordpress",
    "design",
    "web",
    "app",
    "enviroment",
    "gutenberg",
    "designers",
    "developers",
    "development",
    "creative",
    "webpack",
    "sass",
    "vanila",
    "rtl",
    "user",
    "interface",
    "ux",
    "components"
  ],
  "author": "Abdullah.Ramadan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/EngCode/Tornado-v2/issues"
  },
  "homepage": "https://flash-point.net/tornado/",
  "scripts": {
    "tornado-js": "babel --presets @babel/preset-env src/javascript --watch --out-file dist/js/tornado.min.js --minified --no-comments --source-maps --source-type script",
    "tornado-wp": "babel --presets @babel/preset-react src/blocks --watch --out-file dist/js/blocks.min.js --minified --no-comments --source-maps",
    "tornado-sass": "node-sass --watch src/SCSS -o dist/css --output-style compressed --source-map true",
    "tornado-js-build": "babel --presets @babel/preset-env src/javascript--out-file dist/js/tornado.min.js --minified --no-comments --source-maps --source-type script",
    "tornado-wp-build": "babel --presets @babel/preset-react src/blocks --out-file dist/js/blocks.min.js --minified --no-comments --source-maps",
    "tornado-sass-build": "node-sass src/SCSS -o dist/css --output-style compressed --source-map true",
    "tornado": "npm-run-all tornado-sass-build & tornado-js-build & tornado-wp-build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EngCode/Tornado-Docs.git"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/polyfill": "^7.7.0",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-react": "^7.7.4",
    "eslint-plugin-react": "^7.17.0",
    "node-sass": "^4.13.0",
    "npm-run-all": "^4.1.5"
  }
}
